// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git_panel": {
    "tree_view": true
  },
  "agent_servers": {
    "opencode": {
      "type": "registry"
    },
    "github-copilot": {
      "type": "registry"
    }
  },
  "edit_predictions": {
    "provider": "copilot"
  },
  "terminal": {
    "dock": "bottom"
  },
  "context_servers": {
    "github-mcp": {
      "command": "github-mcp.sh",
      "args": []
    }
  },
  "ssh_connections": [
    {
      "host": "orc.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/home/ubuntu"]
        },
        {
          "paths": ["/workspaces/kyverno-website"]
        },
        {
          "paths": ["/workspaces/metal3-mcp"]
        },
        {
          "paths": ["/workspaces/orc"]
        },
        {
          "paths": ["/workspaces/workspace"]
        }
      ]
    },
    {
      "host": "capo.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/capo"]
        }
      ]
    },
    {
      "host": "capi.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/capi"]
        }
      ]
    },
    {
      "host": "capm3.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/capm3"]
        }
      ]
    },
    {
      "host": "prow.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/prow"]
        }
      ]
    },
    {
      "host": "kubernetes.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/kubernetes"]
        }
      ]
    },
    {
      "host": "sushy-tools.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/sushy-tools"]
        }
      ]
    },
    {
      "host": "bmo.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/bmo"]
        }
      ]
    },
    {
      "host": "ipam.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/ipam"]
        }
      ]
    },
    {
      "host": "irso.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/irso"]
        }
      ]
    },
    {
      "host": "kyverno.devpod",
      "args": [],
      "projects": [
        {
          "paths": ["/workspaces/kyverno"]
        }
      ]
    },
    {
      "host": "lennart-cks-cp",
      "args": [],
      "projects": [
        {
          "paths": ["/home/ubuntu"]
        }
      ]
    },
    {
      "host": "metal3-mcp.devpod",
      "args": [],
      "projects": []
    },
    {
      "host": "workspace.devpod",
      "args": [],
      "projects": []
    }
  ],
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "tab_size": 2,
  "minimap": {
    "show": "always"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "github-mcp": {
            "tools": {
              "search_users": true,
              "search_repositories": true,
              "search_pull_requests": true,
              "search_orgs": true,
              "search_issues": true,
              "search_code": true,
              "actions_list": true,
              "actions_get": true,
              "list_tags": true,
              "list_releases": true,
              "list_secret_scanning_alerts": true,
              "list_pull_requests": true,
              "list_notifications": true,
              "list_issues": true,
              "list_gists": true,
              "list_discussions": true,
              "list_discussion_categories": true,
              "list_dependabot_alerts": true,
              "list_commits": true,
              "list_code_scanning_alerts": true,
              "list_branches": true,
              "get_tag": true,
              "get_latest_release": true,
              "get_release_by_tag": true,
              "get_secret_scanning_alert": true,
              "pull_request_read": true,
              "get_notification_details": true,
              "get_me": true,
              "get_teams": true,
              "get_team_members": true,
              "get_job_logs": true,
              "issue_read": true,
              "get_file_contents": true,
              "get_repository_tree": true,
              "get_discussion_comments": true,
              "get_discussion": true,
              "get_dependabot_alert": true,
              "get_code_scanning_alert": true,
              "get_commit": true,
              "get_gist": true,
              "get_label": true
            }
          }
        }
      }
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.6"
    }
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "YAML": {
      "prettier": {
        "allowed": false
      },
      "formatter": {
        "external": {
          "command": "yamlfmt",
          "arguments": ["-in"]
        }
      }
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "buildFlags": ["-tags=e2e,tools"]
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": false
          }
        }
      }
    }
  }
}
