// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ssh_connections": [
    {
      "host": "orc.devpod",
      "projects": [
        {
          "paths": ["/workspaces/orc"]
        }
      ]
    },
    {
      "host": "capo.devpod",
      "projects": [
        {
          "paths": ["/workspaces/capo"]
        }
      ]
    },
    {
      "host": "capi.devpod",
      "projects": [
        {
          "paths": ["/workspaces/capi"]
        }
      ]
    },
    {
      "host": "capm3.devpod",
      "projects": [
        {
          "paths": ["/workspaces/capm3"]
        }
      ]
    },
    {
      "host": "cmctl.devpod",
      "projects": [
        {
          "paths": ["/workspaces/cmctl"]
        }
      ]
    },
    {
      "host": "cert-manager.devpod",
      "projects": [
        {
          "paths": ["/workspaces/cert-manager"]
        }
      ]
    },
    {
      "host": "prow.devpod",
      "projects": [
        {
          "paths": ["/workspaces/prow"]
        }
      ]
    },
    {
      "host": "kubernetes.devpod",
      "projects": [
        {
          "paths": ["/workspaces/kubernetes"]
        }
      ]
    },
    {
      "host": "sushy-tools.devpod",
      "projects": [
        {
          "paths": ["/workspaces/sushy-tools"]
        }
      ]
    },
    {
      "host": "bmo.devpod",
      "projects": [
        {
          "paths": ["/workspaces/bmo"]
        }
      ]
    },
    {
      "host": "lennart-bmo-test",
      "username": "ubuntu",
      "projects": [
        {
          "paths": ["/home/ubuntu/baremetal-operator"]
        }
      ]
    }
  ],
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "tab_size": 2,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_profile": "write",
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.5-sonnet"
    }
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "YAML": {
      "prettier": {
        "allowed": false
      },
      "formatter": {
        "external": {
          "command": "yamlfmt",
          "arguments": ["-in"]
        }
      }
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "buildFlags": ["-tags=e2e"]
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": false
          }
        }
      }
    }
  }
}
